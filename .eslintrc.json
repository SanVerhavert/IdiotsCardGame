{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [ "import" ],
    "rules": {
        "indent": [ "error", "tab" ],
        "linebreak-style": [ "error", "windows" ],
        "quotes": [ "error", "double" ],
        "semi": [ "error", "always" ],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"], //enforce the use of only tabs (and no spaces), unless spaces are used for alignment
        "block-spacing": [ "error", "always" ], // enforce spaces in blocks, i.e. within brackets {}
        "space-before-blocks": "error", // enforce space before blocjks, i.e. before brackets {}
        "space-before-function-paren": [ "error", "never" ], // enforce no space between function (name) and parentheses
        "space-in-parens": [ "error", "always" ], // enforce space after opening and before closing parentheses
        "space-infix-ops": [ "error" ], // enforce spaces before and after operators
        "import/no-commonjs": "error" // enforce ES6 style import/export
    }
}
